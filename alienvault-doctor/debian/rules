#!/usr/bin/make -f

# This file was automatically generated by stdeb 0.6.0+git at
# Wed, 13 Feb 2013 15:33:43 +0100

DOCTOR_VERSION=$(shell head -n1 debian/changelog | sed 's/[^0-9.]*\([0-9.]*\).*/\1/')

%:
	sed -i "s/VERSION/${DOCTOR_VERSION}/" doctor/default.py
	python setup.py sdist --manifest-only
	dh $@ --with python2

override_dh_auto_install:
	python setup.py install --root=debian/alienvault-doctor --install-layout=deb --install-lib=/usr/share/alienvault --install-scripts=/usr/share/alienvault
override_dh_auto_build:
override_dh_python2:

