#!/bin/bash


#REMOVE DEPRECATED GEOIP DATABASES
function delete_old_geoip_databases(){
	if [ `ls /usr/share/geoip/*.dat 2> /dev/null | wc -l` -gt 0 ]
	then
		rm /usr/share/geoip/*.dat
	fi
}

case "$1" in
    install|upgrade)
    	delete_old_geoip_databases
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

