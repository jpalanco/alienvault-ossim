#!/bin/sh
# preinst script for ossim-cd-tools
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    install|upgrade)

        #fix to include . in perl path due version change requirements
        PERL5LIB="export PERL5LIB=."
        ENVIRONMENT="/etc/environment"
        if ! grep "${PERL5LIB}" $ENVIRONMENT &> /dev/null
        then
            echo "${PERL5LIB}" >> $ENVIRONMENT
        fi

        # Fix ossim-repair-tables ENG-100668
        PREGZ="/usr/share/doc/ossim-mysql/contrib/misc/alienvault_siem_pre_rebuild.sql.gz"
        PRE="/usr/share/doc/ossim-mysql/contrib/misc/alienvault_siem_pre_rebuild.sql"
        POSTGZ="/usr/share/doc/ossim-mysql/contrib/misc/alienvault_siem_post_rebuild.sql.gz"
        POST="/usr/share/doc/ossim-mysql/contrib/misc/alienvault_siem_post_rebuild.sql"
        
        if [ -f "$PREGZ" ]; then
            rm -f "$PREGZ"
        fi

        if [ -f "$PRE" ]; then
            rm -f "$PRE"
        fi

        if [ -f "$POSTGZ" ]; then
            rm -f "$POSTGZ"
        fi

        if [ -f "$POST" ]; then
            rm -f "$POST"
        fi
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
