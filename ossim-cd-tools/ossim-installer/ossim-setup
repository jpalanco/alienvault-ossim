     	my($rslt) = qx{ $dlg };
     	my($status) = $? >> 8;

		undef @option;
		if ( $status == 0){
			return $rslt;
		}else{
			return;
		}
		
		
		
	}	
	
	
	
	my $BACKTITLE=" \"OSSIM Setup :: Actual profile/s @profiles_arr :: Version: $config{'version'}\"";
