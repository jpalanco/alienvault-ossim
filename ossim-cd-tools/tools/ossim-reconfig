sub main() {
	

    my $sts
        = `ps -feaww | grep \"/usr/bin/perl\"| egrep "ossim-reconfig\|alienvault-reconfig\" | grep -v vi | grep -v grep | grep -v in-target | grep -v postpone | grep -v "update_sensors" | wc -l`;

    if ( $sts > 1 ) {
        console_log("ossim-reconfig is already running ... exiting");
        exit 0;
    }

    $sts
        = `ps -fea | grep -v grep | grep -v vi | egrep "ossim-reconfig\|alienvault-reconfig" | grep postpone | wc -l`;
    if ( ( $sts > 0 ) && ( $dpkg_initscript != 1 ) ) {
        console_log(
            "apt upgrade is running, ossim-reconfig will be launched automatically after the upgrade ... exiting"
        );
        exit 0;
    }

## common

	#debconf_config();

	#
	#  antigua current_config  y last_config
	#
	
        # FIXME: this chunk of code should be reviewed
        my $interface = "";
		console_log("Getting IP");dp("Getting IP");

    
    		#my $ip = "";

    		open( INFILE, "</etc/network/interfaces" );

    		while (<INFILE>) {
        		if (/^iface $interface/) {
            			while (<INFILE>) {
                			if (/\s+address\s+(\d+\.\d+\.\d+\.\d+)/) {
                    				$ip = $1;
                    				last;
                			}
            			}
            			last;
        		}
    		}
    
		close INFILE;

		if ( $ip eq "" ) {
        		$ip = `ifconfig $interface|egrep -o "inet addr:([0-9]+\.){3}[0-9]+"| awk -F: '{print $2}'`; $ip =~ s/\n//g;

        			if ( $ip !~ /(\d+\.\d+\.\d+\.\d+)/ ) {
            				$ip = $1;
            				print "No ip found, please check config file and system. Your defined interface, $interface, needs a valid ip...\n";
        			}else {
            				print "Configuring OSSIM with $ip\n";
        			}
    		}


 $server_hostname=$config{'hostname'};
 $server_port="40001";
 $server_ip=$config{'server_ip'};
 $framework_port=$config{'framework_port'} ;
 $framework_host=$config{'framework_ip'} ;
 $db_host=$config{'database_ip'};
 $db_pass=$config{'database_pass'};

	@profiles_arr = split( /,\s*/,     $config{'profile'} );
	
	 
	# sync for change ip address
	
        foreach my $profile (@profiles_arr){

                given($profile){
                        #when ( m/Database/ ) { ; }
                        #when ( m/Server/ ) { ; }
                        when ( m/Framework/ ) {  $framework_host=$config{'admin_ip'}; }
                        #when ( m/Sensor/ ) { ; }
                }

        }

	#
	#  end antigua current_config y last_config
	#


    foreach my $profile (@profiles_arr){

                given($profile){
                       when ( m/Database/ ) {
                            if ( $db_reb eq 'yes' ) {
                                Avconfig_profile_database::config_database_rebuild($db_reb);
                                #exit;
                            }
                        }
                }
    }


	foreach my $profile (@profiles_arr){

		given($profile){
			when ( m/Database/ ) { $profile_database=1; }
			when ( m/Server/ ) { $profile_server=1; }
			when ( m/Framework/ ) { $profile_framework=1; }
			when ( m/Sensor/ ) { $profile_sensor=1; }
		}	

	}
	if ( $profile_database == 1 || $profile_server == 1 || $profile_framework == 1 ) {
                my $conn = Avtools::get_database;
        }

#exit 0;    	
	
	# command

	if ((exists $config{'add_sensor'})){
		console_log("Add new sensor ip ($config{'add_sensor'} - $config{'add_sensor_name'}) ");
		my $command="echo \"insert into ossim.sensor (ip,name,priority,port) value (\'$config{'add_sensor'}\',\'$config{'add_sensor_name'}\',\'5\',\'40001\')\" | ossim-db ";

		console_log($command);
		system($command);
	}

	if (exists $config{'update_sensors'}) {

	 if ($profile_framework==1) {

		my $munin_conf_file="/etc/munin/munin.conf";
		my $munin_include ="/etc/munin/munin.conf.include";
		if ( -f $munin_conf_file){
			verbose_log("Configuring munin");
			#Include FrameWork
			my $system_framework_name=`cat /etc/hosts | grep $config{'framework_ip'} | awk '{print \$2}' | head -1`;
			chomp($system_framework_name);
			my $fw_ip=$config{'framework_ip'};
			my $fn;
			if ($system_framework_name eq '') {
				# If framework name is empty, we use the IP address
				$fn = $fw_ip;
			}else{
				# Munin must work with lowercase hostnames
				$fn = $system_framework_name;
			}
			open my $munin_framework_conf_fh, ">", "$munin_conf_file" or die "Error opening file $!";
			print {$munin_framework_conf_fh} <<EOF;
$script_msg
# Please use /etc/munin/munin.conf.include to add your own hosts
#
# All hostnames must be entered in lowercase

dbdir   /var/lib/munin
htmldir /var/www/munin
logdir  /var/log/munin
rundir  /var/run/munin
tmpldir /etc/munin/templates

# Framework: $fn
[$fn]
	address $fw_ip
	use_node_name yes

EOF
			#Include DataBase
			my $ddbb_ip=$config{'database_ip'};
			# Allinone profiles should not repeat components
			if ($fw_ip ne $ddbb_ip){
				if ( ($ddbb_ip ne "127.0.0.1") && ($ddbb_ip ne $fw_ip) ) {
					print {$munin_framework_conf_fh} <<EOF;
# Database: $ddbb_ip
[$ddbb_ip]
	address $ddbb_ip
	use_node_name yes

EOF
				}
			}
			# Include known sensors
			my @sensor_db=`echo "select * from sensor;" |ossim-db | grep -v "priority" | cut -f1,2`;
			for my $varsen (@sensor_db){
				$varsen =~ s/\n//g;
				my ($sen_name, $sen_ip) = split(/\s+/, $varsen);
				my $sn;
				if ($sen_name eq ''){
					# If sensor name is empty, we use the IP address:
					$sn = $sen_ip;
				}else{
					# Munin internally works with lowercase hostnames
					$sn = $sen_name;
				}
				# Allinone profiles should not repeat components
				if ( ($fw_ip ne $sen_ip) && ($ddbb_ip ne $sen_ip) ) {
					print {$munin_framework_conf_fh} <<EOF;
# Sensor: $sn
[$sn]
	address $sen_ip
	use_node_name yes

EOF
				}
			}
			print {$munin_framework_conf_fh} <<EOF;

# End of automated configuration by ossim-reconfig

EOF
			close $munin_framework_conf_fh;

			# Import include file for munin
                        # If empty or not there, create an example file.
                        if ( (-z $munin_include) || (! -f $munin_include) ){
                                open my $munin_include_file_fh, ">", "$munin_include" or die "Error opening file $!";
                                print {$munin_include_file_fh} <<EOF;
# Munin configuration include file for AlienVault's OSSIM
#
# Manually introduce hosts here, following same syntax as /etc/munin/munin.conf
# Hosts will be included in the main munin configuration by a cron job running
# ossim-reconfig --update_sensors
#
# Please make sure no duplicates are found in /etc/munin/munin.conf
# IMPORTANT: Always use lowercase for hostnames
#
# Also make sure you add the propper firewall rule so that the sensors can talk
# to the framework on port tcp/4949
#
#
# Example entry:
# [hostname.domainname]
#          address 192.168.0.1
#          use_node_name yes
#

EOF
                                close $munin_include_file_fh;
                        }else{
				my $command="grep -v \"^\#\" $munin_include >> $munin_conf_file";
				debug_log("$command");
				system($command);
                        }
			# Munin node is not modified by --update_sensors, no need to restart it.
			#console_log("Restarting munin-node");
			#system("/etc/init.d/munin-node restart $stdout $stderr");
		}

	 }

	exit 0;
	}


	if ((exists $config{'add_vpnnode'})){
		console_log("Adding a new vpn node: ($config{'add_vpnnode'}) ");
		gen_openvpn();
		exit 0;

	}


	foreach my $profile (@profiles_arr){

		given($profile){
			when ( m/Database/ ) { $profile_database=1; }
			when ( m/Server/ ) { $profile_server=1; }
			when ( m/Framework/ ) { $profile_framework=1; }
			when ( m/Sensor/ ) { $profile_sensor=1; }
		}

	}




 #
 # always
 #

# Always add the 'alienvault' group.
system ("addgroup --quiet --system $avgroup") == 0
    or die "Cannot create new group $avgroup, rc $?";

system("chown -R root:${avgroup} /etc/ossim/");

my %retro;
my %reset;
	%reset = Avconfig_profile_common::config_common("head");
		foreach my $key (keys(%reset)){	$retro{$key} = $reset{$key}; }
	
	
	if ( $profile_database == 1 ) { 
			download_profile("Database"); 
			%reset = Avconfig_profile_database::config_profile_database(); 
				foreach my $key (keys(%reset)){	$retro{$key} = $reset{$key}; }
	}else{
		if ( -f "/etc/monit/alienvault/avdatabase.monitrc") {
			system ("rm -f /etc/monit/alienvault/avdatabase.monitrc");
		}
	}
	

	if ( $profile_server == 1 ) {  
			download_profile("Server"); 
			%reset = Avconfig_profile_server::config_profile_server(); 
				foreach my $key (keys(%reset)){	$retro{$key} = $reset{$key}; }
	}else{
		if ( -f "/etc/monit/alienvault/avserver.monitrc") {
			system ("rm -f /etc/monit/alienvault/avserver.monitrc");
		}
	}


	if ( $profile_framework == 1 ) {  
			download_profile("Framework"); 
			%reset = Avconfig_profile_framework::config_profile_framework(); 
				foreach my $key (keys(%reset)){	$retro{$key} = $reset{$key}; }
	}else{
		if ( -f "/etc/monit/alienvault/avframework.monitrc") {
			system ("rm -f /etc/monit/alienvault/avframework.monitrc");
		}
		if ( -f "/etc/monit/alienvault/nfcapd.monitrc") {
			system ("rm -f /etc/monit/alienvault/nfcapd.monitrc");
		}
	}
	

	if ( $profile_sensor == 1 ) {  
			download_profile("Sensor"); 
			%reset = Avconfig_profile_sensor::config_profile_sensor(); 
				foreach my $key (keys(%reset)){	$retro{$key} = $reset{$key}; }
	}else{
		if ( -f "/etc/monit/alienvault/avsensor.monitrc") {
			system ("rm -f /etc/monit/alienvault/avsensor.monitrc");
		}
	}
	

	%reset = Avconfig_profile_common::config_common("foother");
		foreach my $key (keys(%reset)){	$retro{$key} = $reset{$key}; }





#foreach my $key (keys(%retro)){	console_log("----------------$key  $retro{$key}");}


        # services
        if ( ( $config{'ha_heartbeat_start'} // q{} ) eq "yes" ) {

                # if reset, reload configurations (for example: alienvault-firewall, or mysql new configs)
                restart_services(%retro);
                # stop and remove from sysvrc, all services but mysql and alienvault-firewall
                disable_services();

				if ( $profile_database == 1 ){
					# mysql must be up for replication:
					system("update-rc.d mysql defaults  $stdout $stderr ");

					# if profile changed, reboot required, so forget stopping here
					# }else{ system("/etc/init.d/mysql stop $stdout $stderr "); }

				}

                # handle firewall outside enable_services and outside ossim-ha initscript
                if ( $config{'firewall_active'} eq "yes" ){
                    system("update-rc.d alienvault-firewall defaults  $stdout $stderr ");
                }else{
                    system("update-rc.d -f alienvault-firewall remove  $stdout $stderr ");
                }

                # heartbeat (resource 'ossim-ha') starts/stops services
                if ( -x "/etc/init.d/heartbeat" ){
                        system ("update-rc.d heartbeat defaults >/dev/null 2>&1 $stdout $stderr");
                        console_log ("Restarting heartbeat");
                        system ("/etc/init.d/heartbeat restart >/dev/null &");
                }

        }else{
				
                restart_services(%retro);
                disable_services();
                enable_services();

                # heartbeat included in disable, not included in enable,
                # but double check to stop it and remove it from sysvrc
                if ( -x "/etc/init.d/heartbeat" ){
                        system ("update-rc.d -f heartbeat remove >/dev/null 2>&1 $stdout $stderr");
                        if ( -f "/var/run/heartbeat.pid"){
							console_log ("Stopping heartbeat");
							system ("/etc/init.d/heartbeat stop >/dev/null &");
						}
				}		
                # rm after stop (if running we need its config to stop)
                if ( -f "/etc/ha.d/ha.cf" ) {
                        system ("rm -f /etc/ha.d/ha.cf");
                }
                if ( -f "/etc/ha.d/authkeys" ) {
                        system ("rm -f /etc/ha.d/authkeys");
                }
                if ( -f "/etc/ha.d/haresources" ) {
                        system ("rm -f /etc/ha.d/haresources");
                }



        # services end
        }


 console_log("Configuration finished");
 $percent=100; dp("Configuration finished");
 #print "\nUse ossim-setup to reconfigure the system.\n";


# main end
}

sub parse_argv() {


        # scan command line arguments
        foreach (@ARGV) {
                my @parms = split(/=/);

        if (($parms[0] eq "--help") || ($parms[0] eq "-h")) { help(); }
        elsif (($parms[0] eq "--console-log") || ($parms[0] eq "-c")) {$CONSOLELOG = 1;}
		elsif (($parms[0] eq "--verbose") || ($parms[0] eq "-v")) {$VERBOSELOG = 1; $CONSOLELOG = 1;}
		elsif (($parms[0] eq "--debug") || ($parms[0] eq "-d")) {$DEBUGLOG = 1; restore_orig_output_descriptors();}
		elsif (($parms[0] eq "--quiet") || ($parms[0] eq "-q")) {$dialog_active = 0;}
		elsif (($parms[0] eq "--dpkg") || ($parms[0] eq "-dpkg")) {$dpkg_initscript = 1;}
		elsif (($parms[0] eq "--center") || ($parms[0] eq "-center")) {$center_initscript = 1;}


		elsif (($parms[0] eq "--add_sensor") || ($parms[0] eq "-a")) {
                        if ($parms[1] eq "") { error("Please enter an IP address (example: --add_sensor=192.168.1.100");}
                        $config{'add_sensor'} = "$parms[1]"; 
			}			
		elsif (($parms[0] eq "--add_sensor_name") || ($parms[0] eq "-an")) {
                        if ($parms[1] eq "") { error("Sensor name required (example: --add_sensor_name=joaquin");}
                        $config{'add_sensor_name'} = "$parms[1]"; 
			}			
	        elsif (($parms[0] eq "--add_vpnnode") || ($parms[0] eq "-avpn")) {
                        if ($parms[1] eq "") { error("Please enter the IP address of the new VPN node (example: --add_vpnnode=192.168.1.100");}
                        $config{'add_vpnnode'} = "$parms[1]"; 
			$dialog_active = 0;
			}	      
        elsif ($parms[0] eq "--rebuild_db") {
                        $db_reb='yes';
            }
        elsif ($parms[0] eq "--upgrade_version") {
                        $config{'upgrade'}='yes';
            }
 		elsif (($parms[0] eq "--update_sensors") || ($parms[0] eq "-us")) {
                        $config{'update_sensors'} = 1;
			$dialog_active = 0;
			}
		elsif ($parms[0] eq "--mysql_replication") {
            restore_orig_output_descriptors();
			#system("/bin/bash /usr/share/ossim-installer/auxscripts/ha_mysql_replication.sh");
			system("av_ha_mysql_replication");
			exit 0;
	        	}

		else {
                        error("Unknown argument $_ from command line.");
                }

                undef @parms;
        }
}
sub config_check() {
	# Checks configuration validity
	my $noerror = 1;


	if ( $CONSOLELOG == 1 || $DEBUGLOG == 1 || $VERBOSELOG == 1 ) {
                console_log("Console log mode on");
		$dialog_active = 0;		
        }


	
	if ((exists $config{'add_sensor'}) && (! exists $config{'add_sensor_name'})) {
                error("Please enter a name");
                $noerror = 1;
        }

	if ((! exists $config{'add_sensor'}) && ( exists $config{'add_sensor_name'})) {
                error("Please specify an IP address");
                $noerror = 1;
        }


	return $noerror;
}
sub help(){
always_log(<<"EOF");

AlienVault-reconfig $VER Help ($^O, perl $])

Usage examples:
  ossim-reconfig [options] 

Command line options:

	--help (or -h) 
      Displays this help message.

	--console-log (or -c)
	  Enable logging messages to console.

	--verbose (or -v)
	  Enable verbose mode.

	--debug (or -d)
	  Enable debug mode. (insane)

	--quiet (or -q)
	  Quiet mode.

	--add_sensor (or -a) + --add_sensor_name (or -an)
	  Add a new sensor to database
	
	--add_vpnnode 
	  Create a new vpn node 
	  
	--update_sensors
	  Update sensors config from ddbb info. (only for cron.d)
	  
	--mysql_replication
	  MySQL dump and replication with binary log coordinates

For more info, please visit http://www.alienvault.com/

EOF
exit;
}

sub download_profile($){

if ( "$config{upgrade}" ne "yes" ){

	console_log("Skip upgrade");
	return 0;	
	
}


my @packages_profile;

my $profilecurrent = shift;

	my $packagesfile="/usr/share/ossim-installer/simple-cdd/".$profilecurrent.".packages";
	console_log("Find profile packages file : $packagesfile");dp("Find profile packages file : $packagesfile");


	if( -f "$packagesfile" ){
		console_log("Found profile packages file : $packagesfile");dp("Found profile packages file : $packagesfile");
		open PACKFILE, "< $packagesfile" or die "packagesfile $!";
			my @varshowrunning=<PACKFILE>;
		close (PACKFILE);
		foreach my $variabless (@varshowrunning)
		{
			
			$variabless =~ s/\n/ /g;
			#print $variabless;
			if ( $variabless =~ m/^\#/ ){
				verbose_log("Skiping $variabless");
				
			}else{
				push(@packages_profile,"$variabless");
			}
			
		}	
	}


	
		console_log("Install/update packages");dp("Install/update packages");
		debug_log("Install/update: @packages_profile");
		my $apt_out=`apt-get $apt_option  install  @packages_profile`;
		#system("apt-get $apt_option  install  @packages_profile");
		debug_log("$apt_out");


}


sub restart_services(){
	
	
	my %reset = @_;
# take care on value of the reset flag. if true restart service and add it to sysvrc
 
	if ( $config{'first_init'} eq "yes" ){  
		verbose_log("Restart Service: Set lock first init");
		my $command="sed -i \"s:first_init=yes:first_init=no:\" $config_file";
			debug_log("$command");
			system($command);
		
		$command="sed -i \"s:upgrade=yes:upgrade=no:\" $config_file";
			debug_log("$command");
			system($command);

			disable_services();
			enable_services();
			
			## splash
			
			
	}else{
   
	# database
	
			if($reset{'mysql'}){
				console_log("Restarting mysql");dp("Restarting mysql");
				
				if ($reset{'conditional_reset_mysql'} == 1){
						system("/etc/init.d/mysql stop  $stdout $stderr ");
						system("rm -rf /var/lib/mysql/ib_logfile*");
					
				}
				system("/etc/init.d/mysql restart  $stdout $stderr ");
				system("update-rc.d mysql defaults  $stdout $stderr ");
				
					
				
			}
    	# server			
			if($reset{'ossim-server'}){
				console_log("Restarting ossim-server");dp("Restarting ossim-server");
				system("/etc/init.d/ossim-server restart  $stdout $stderr ");
				system("update-rc.d ossim-server defaults  $stdout $stderr ");}

    	# framework		
			if($reset{'ossim-framework'}){
				console_log("Restarting ossim-framework");dp("Restarting ossim-framework");
				system("/etc/init.d/ossim-framework restart  $stdout $stderr ");	
				system("update-rc.d ossim-framework defaults  $stdout $stderr ");}
				
			if($reset{'apache2'}){
				
				my $apache_action = "restart";
				 $apache_action = "reload" if $center_initscript;
				console_log("Restarting apache2");dp("Restarting apache2");
				system("/etc/init.d/apache2 $apache_action  $stdout $stderr ");
				system("update-rc.d apache2 defaults  $stdout $stderr ");}

            if($reset{'squid'}){                                               
                                                                                 
                console_log("Restarting squid3");dp("Restarting squid3");      
                system("/etc/init.d/squid3 stop  $stdout $stderr ");  
                system("/etc/init.d/squid3 start  $stdout $stderr ");  
                system("update-rc.d squid3 defaults  $stdout $stderr ");}   

			if($reset{'nagios3'}){
				console_log("Restarting nagios3");dp("Restarting nagios3");
				system("/etc/init.d/nagios3 restart  $stdout $stderr ");
				system("update-rc.d nagios3 defaults  $stdout $stderr ");}

			if($reset{'munin-node'}){
				console_log("Restarting munin-node");dp("Restarting munin-node");
				system("/etc/init.d/munin-node restart  $stdout $stderr ");
				system("update-rc.d munin-node defaults  $stdout $stderr ");}

			if($reset{'nessusd'}){
				console_log("Restarting nessusd");dp("Restarting nessusd");
				system("/etc/init.d/nessusd  restart  $stdout $stderr ");	
				system("update-rc.d nessusd defaults  $stdout $stderr ");}
				
			if($reset{'nfsen'}){
				console_log("Restarting nfsen");dp("Restarting nfsen");
				system("/etc/init.d/nfsen  restart  $stdout $stderr ");	
				system("update-rc.d nfsen defaults  $stdout $stderr ");}

			if ( -x "/etc/init.d/asec-machete" ){
				if($reset{'asec-machete'}){
					console_log("Restarting asec-machete");dp("Restarting asec-machete");
					system("/etc/init.d/asec-machete restart  $stdout $stderr ");
					system("update-rc.d asec-machete defaults  $stdout $stderr ");}
			}

			if ( -x "/etc/init.d/asec-mixter" ){
				if($reset{'asec-mixter'}){
					console_log("Restarting asec-mixter");dp("Restarting asec-mixter");
					system("/etc/init.d/asec-mixter restart  $stdout $stderr ");
					system("update-rc.d asec-mixter defaults  $stdout $stderr ");}
			}

	# sensor

			if ( $dpkg_initscript == 0 ){
				if($reset{'sensors'}){
					console_log("Restarting sensors");dp("Restarting sensors");
					system("ps -fea | grep snort | grep -v grep | awk '{print \$2}' |while read line ; do kill -9 \$line  $stdout $stderr  ; done ; /bin/true");
					system("ps -fea | grep prads | grep -v grep| awk '{print \$2}' |while read line ; do kill -9 \$line  $stdout $stderr  ; done ; /bin/true");

				}
			
			}else{ console_log("Skip Restarting sensors --dpkg option found ");dp("Skip Restarting sensors --dpkg option found");}
			if($reset{'ossim-agent'}){
				console_log("Restarting ossim-agent");dp("Restarting ossim-agent");
				system("/etc/init.d/ossim-agent stop  $stdout $stderr  ; /etc/init.d/ossim-agent start  $stdout $stderr ");
			
				system("update-rc.d ossim-agent defaults  $stdout $stderr ");}
			#system("ps -fea | grep snort | awk '{print $2}' |while read line ; do kill -9 $line ; done");	
			if($reset{'openvpn'}){
				console_log("Restarting vpn");dp("Restarting vpn");
				system("/etc/init.d/openvpn restart $stdout $stderr "); }
			
                        if ( $config{'firewall_active'} eq "yes" ){
                                if($reset{'iptables'}){
                                        console_log("Restarting firewall");dp("Restarting firewall");
                                        if ( -f "/etc/network/if-pre-up.d/iptables" ){
                                                system("/etc/network/if-pre-up.d/iptables");
                                        }else{
                                                console_log("ERROR: iptables file does not exist");dp("ERROR: iptables file does not exist");
                                        }
                                }else{
                                        console_log("Skipping firewall reset");dp("Skipping firewall reset");
                                }
                        }else{
                                console_log("Disable firewall");dp("Disable firewall");
                                # system("iptables -F -t filter; iptables -F -t nat; iptables -F -t mangle");
                                system("iptables -F");
                        }

			if($reset{'ntop'}){
				console_log("Restarting ntop");dp("Restarting ntop");
				system("/etc/init.d/ntop restart  $stdout $stderr ");
				system("update-rc.d ntop defaults  $stdout $stderr ");}

			if($reset{'monit'}){
				console_log("Restarting monit");dp("Restarting monit");
				system("/etc/init.d/monit restart  $stdout $stderr ");}

			if($reset{'snmpd'}){
				console_log("Restarting snmpd");dp("Restarting snmpd");
				system("/etc/init.d/snmpd restart  $stdout $stderr ");}
				
			if($reset{'postfix'}){
				console_log("Restarting postfix");dp("Restarting postfix");
				system("/etc/init.d/postfix restart  $stdout $stderr ");}

			if($reset{'rsyslog'}){
				console_log("Restarting rsyslog");dp("Restarting rsyslog");
				system("/etc/init.d/rsyslog restart  $stdout $stderr ");}

			if($reset{'rsync'}){
				console_log("Restarting rsync");dp("Restarting rsync");
			 	system("update-rc.d rsync defaults $stdout $stderr "); 
				system("/etc/init.d/rsync restart $stdout $stderr ");
			}else{
				console_log("Stop rsync");dp("Restart rsync");
			 	system("update-rc.d -f rsync remove  $stdout $stderr "); 
				system("/etc/init.d/rsync stop $stdout $stderr ");
			}


			if ($config{'vpn_infraestructure'} eq "yes"){
				console_log("Restarting openvpn");
				system("/etc/init.d/openvpn restart  $stdout $stderr ");}
			
				console_log("Restarting fprobe");dp("Restarting fprobe");
				if($reset{'fprobe'}){
					if ($config{'netflow'} eq "yes" ){
						system("/etc/init.d/fprobe stop  $stdout $stderr ");
						sleep (2);
						system("/etc/init.d/fprobe start  $stdout $stderr ");
				 	}else{
			 			system("update-rc.d -f fprobe remove  $stdout $stderr "); 
						system("/etc/init.d/fprobe stop  $stdout $stderr "); 
					}			
				}

			if ( ( -f "/etc/rc.local" ) && ( -f "/etc/init.d/rc.local" ) ){
                                console_log("Start rc.local");
                                system("/etc/init.d/rc.local start $stdout $stderr ");
                        }
	}	
}

    
sub disable_services(){
# stop (only if cluster enabled) and disable all services, but mysql and alienvault-firewall

console_log("Disable services");dp("Disable services");

=out
	system("update-rc.d -f mysql remove  $stdout $stderr ");
	system("update-rc.d -f ossim-server remove  $stdout $stderr ");
	system("update-rc.d -f ossim-framework remove  $stdout $stderr ");
	system("update-rc.d -f apache2 remove  $stdout $stderr ");
	system("update-rc.d -f tomcat remove  $stdout $stderr ");
	system("update-rc.d -f nessusd remove  $stdout $stderr ");
	system("update-rc.d -f ossim-agent remove  $stdout $stderr ");
	system("update-rc.d -f nagios3 remove  $stdout $stderr ");
	system("update-rc.d -f snort remove  $stdout $stderr ");
	system("update-rc.d -f prads remove  $stdout $stderr ");
	system("update-rc.d -f snmpd remove  $stdout $stderr ");
	system("update-rc.d -f nfsen remove  $stdout $stderr ");
	system("update-rc.d -f nfdump remove  $stdout $stderr ");
	system("update-rc.d -f fprobe remove  $stdout $stderr ");
	system("update-rc.d -f alienvault-firewall remove  $stdout $stderr ");
	system("update-rc.d -f openvpn remove  $stdout $stderr ");
	system("update-rc.d -f heartbeat remove  $stdout $stderr ");
	system("update-rc.d -f monit remove  $stdout $stderr ");
=cut

#	my @stopsysvrcl=('monit','ossim-ha','heartbeat','ossim-server','alienvault-idm','ossim-framework','ossim-agent','apache2','nessusd','openvas-scanner','openvas-manager','openvas-administrator','nagios3','snort','suricata','prads','p0f','snmpd','nfsen','nfdump','fprobe','openvpn','ossec','pads','arpwatch','memcached','asec-machete','asec-mixter');
	my @stopsysvrcl=('monit','ossim-ha','heartbeat','ossim-server','ossim-framework','ossim-agent','apache2','nessusd','nagios3','snort','suricata','prads','snmpd','nfsen','nfdump','fprobe','openvpn','asec-machete','asec-mixter');
	foreach (@stopsysvrcl){
		my $command="test -x /etc/init.d/$_ && update-rc.d -f $_ remove >/dev/null 2>&1";
		debug_log("$command");
		system($command);
	}
	# don't include mysql in array
	my $command="update-rc.d -f mysql remove >/dev/null 2>&1";
	debug_log("$command");
	system($command);

	# stop services if cluster enabled
    if ( ( $config{'ha_heartbeat_start'} // q{} ) eq "yes" ) {
		foreach (@stopsysvrcl){
			my $command="test -x /etc/init.d/$_ && /etc/init.d/$_ stop >/dev/null 2>&1";
			debug_log("$command");
			system($command);
		}
	}

}


# check and rewrite/simplify, and use insserv instead of update-rc.d
sub enable_services(){
# (or disable them if value is 'no' in setup)

console_log("Enable services");dp("Enable services");
	foreach my $profile (@profiles_arr){
		given($profile){
			when ( m/Server/ ) { 
				system("update-rc.d ossim-server defaults  $stdout $stderr ");
				
			}
			when ( m/Database/ ) { 
				system("update-rc.d mysql defaults  $stdout $stderr ");
			}
			when ( m/Framework/ ) { 
				system("update-rc.d ossim-framework defaults  $stdout $stderr ");
				system("update-rc.d nagios3 defaults  $stdout $stderr ");
				system("update-rc.d apache2 defaults  $stdout $stderr ");
				system("update-rc.d nfsen defaults  $stdout $stderr ");
				if ( -x "/etc/init.d/asec-machete" ){
					system("update-rc.d asec-machete defaults  $stdout $stderr ");
				}
				if ( -x "/etc/init.d/asec-mixter" ){
					system("update-rc.d asec-mixter defaults  $stdout $stderr ");
				}
			}
			when ( m/Sensor/ ) { 
				system("update-rc.d ntop defaults  $stdout $stderr ");
				system("update-rc.d ossim-agent defaults  $stdout $stderr ");
				
				if ($config{'netflow'} eq "yes" ){
						system("update-rc.d fprobe defaults  $stdout $stderr "); 
				}else{
			 			system("update-rc.d -f fprobe remove  $stdout $stderr "); 
						system("/etc/init.d/fprobe stop  $stdout $stderr "); 
				}
			}
		}	
	}

	if ($config{'snmpd'} eq "yes" ){
		system("update-rc.d snmpd defaults  $stdout $stderr "); 
	}else{
		 system("update-rc.d -f snmpd remove  $stdout $stderr "); 
		system("/etc/init.d/snmpd stop  $stdout $stderr "); 
	}

	if ( $config{'firewall_active'}	eq "yes" ){
		system("update-rc.d alienvault-firewall defaults  $stdout $stderr "); 
	}else{
		system("update-rc.d -f alienvault-firewall remove  $stdout $stderr "); 
		#system("/etc/init.d/alienvault-firewall stop  $stdout $stderr ");
			
	}
	
	if ($config{'vpn_infraestructure'} eq "yes"){
		system("update-rc.d openvpn defaults  $stdout $stderr "); 

	}
	system("update-rc.d -f monit remove $stdout $stderr ");
	system("update-rc.d monit defaults  90 01 $stdout $stderr ");

}

sub gen_openvpn(){

#if ( $config{'vpn_infraestructure'} eq "yes" ){
my $oppath="/usr/share/doc/openvpn/examples/easy-rsa/2.0";
my $opvars="/usr/share/doc/openvpn/examples/easy-rsa/2.0/vars";
my $opconf="/etc/openvpn/AVinfraestructure.conf";

	if ( $profile_server == 1 ) {
		if ( ! -f $opconf ){
			console_log("Server Profile: Create $opconf");dp("Server Profile: Create $opconf");
			open VPNFILE, "> $opconf" or die "Error open log file $!";
print VPNFILE <<EOF;
$script_msg
port $config{'vpn_port'}
proto tcp
dev tun
server $config{'vpn_net'}.0 $config{'vpn_netmask'}
ca /etc/openvpn/AVinfraestructure/keys/ca.crt
cert /etc/openvpn/AVinfraestructure/keys/alienvcd.crt
key /etc/openvpn/AVinfraestructure/keys/alienvcd.key
dh /etc/openvpn/AVinfraestructure/keys/dh1024.pem
user nobody
group nogroup
verb 3
mute 20
keepalive 10 120
client-config-dir /etc/openvpn/ccd
comp-lzo
persist-key
persist-tun
ccd-exclusive
client-to-client
EOF

console_log("Server Profile: Create $opvars");
open VPK, "> $opvars" or die "Error open log file $!";
print VPK <<EOF;
export EASY_RSA="`pwd`"
export OPENSSL="openssl"
export PKCS11TOOL="pkcs11-tool"
export GREP="grep"
export KEY_CONFIG=`\$EASY_RSA/whichopensslcnf \$EASY_RSA`
export KEY_DIR="\$EASY_RSA/keys"
export PKCS11_MODULE_PATH="dummy"
export PKCS11_PIN="dummy"
export KEY_SIZE=1024
export CA_EXPIRE=3650
export KEY_EXPIRE=3650
export KEY_COUNTRY="ES"
export KEY_PROVINCE="ES"
export KEY_CITY="Madrid"
export KEY_ORG="Alienvault"
export KEY_EMAIL="root\@alienvault.com"
EOF


			if ( ! -d "/etc/openvpn/AVinfraestructure/keys"){
				system ("mkdir -p /etc/openvpn/AVinfraestructure/keys");
				my $command = <<"EOF";
cd $oppath
. $opvars
./clean-all
./build-dh
export EASY_RSA="\${EASY_RSA:-.}"
"\$EASY_RSA/pkitool"  --initca \$*
export EASY_RSA="\${EASY_RSA:-.}"
"\$EASY_RSA/pkitool" --server alienvcd
cp -rf keys/* /etc/openvpn/AVinfraestructure/keys/
EOF
				console_log($command);
				system($command);
			}

		}


if ( ! -d "/etc/openvpn/nodes"){
	
	system ("mkdir /etc/openvpn/nodes");
}


if ( ! -d "/etc/openvpn/ccd"){

        system ("mkdir /etc/openvpn/ccd");
}


if ( ! -d "/etc/openvpn/nodes/$config{'add_vpnnode'}"){
	
	system ("mkdir -p /etc/openvpn/nodes/$config{'add_vpnnode'}/keys");
}
	
	my $opnodeconf="/etc/openvpn/nodes/$config{'add_vpnnode'}.conf";


	open VPNNODE, "> $opnodeconf" or die "Error open log file $!";
	print VPNNODE <<EOF;
$script_msg
client
dev tun
proto tcp
remote $config{'admin_ip'} $config{'vpn_port'}
resolv-retry infinite
nobind
user nobody
group users
persist-key
persist-tun
comp-lzo
verb 3

ca /etc/openvpn/$config{'add_vpnnode'}/keys/ca.crt
cert /etc/openvpn/$config{'add_vpnnode'}/keys/$config{'add_vpnnode'}.crt
key /etc/openvpn/$config{'add_vpnnode'}/keys/$config{'add_vpnnode'}.key

script-security 2 system
up "/etc/init.d/fprobe stop || true"
EOF
	
	system("cp -rf /etc/openvpn/AVinfraestructure/keys/ca.crt /etc/openvpn/nodes/$config{'add_vpnnode'}/keys/");
	system("cp -rf /usr/share/doc/openvpn/examples/easy-rsa/2.0/openssl.cnf /etc/openvpn/nodes/");
	my $command = <<"EOF";
cd $oppath
. $opvars
export EASY_RSA="\${EASY_RSA:-.}"
"\$EASY_RSA/pkitool" $config{'add_vpnnode'}
cp -rf keys/$config{'add_vpnnode'}* /etc/openvpn/nodes/$config{'add_vpnnode'}/keys/
EOF
	console_log($command);
system($command);


	system("cd /etc/openvpn/nodes/ ; tar zcvf $config{'add_vpnnode'}.tar.gz $config{'add_vpnnode'} $config{'add_vpnnode'}.conf openssl.cnf");
	system("rm -rf /etc/openvpn/nodes/$config{'add_vpnnode'}");
	system("rm -rf /etc/openvpn/nodes/$config{'add_vpnnode'}.conf");
	system("rm -rf /etc/openvpn/nodes/openssl.cnf");
		
	

	#ccd

	my $f_free=10;
	my $l_free=254;

        my @ip_assign_local=`cat /etc/openvpn/ccd/* | awk '{print \$3}' | awk -F\. '{print \$4}' | sort`;
        my @ip_assign_remote=`cat /etc/openvpn/ccd/* | awk '{print \$2}' | awk -F\. '{print \$4}' | sort`;
	
	my $first_host_free;  
	my $second_host_free;  

	foreach ($f_free .. $l_free){
        	
		my $host_current = $_;

	        if (map(/$host_current/,@ip_assign_local)){ next; }
       		if (map(/$host_current/,@ip_assign_remote)){ next; }


	        $first_host_free=$host_current;
	        push(@ip_assign_local,$host_current);
       		last;

	}


	foreach ($f_free .. $l_free){


        	my $host_current = $_;


	        if (map(/$host_current/,@ip_assign_local)){ next; }
       		if (map(/$host_current/,@ip_assign_remote)){ next; }


	        $second_host_free=$host_current;
       		last;

	}


	my $ccd_file="/etc/openvpn/ccd/$config{'add_vpnnode'}";
	console_log("add Sensor $config{'add_vpnnode'} with $config{'vpn_net'}.$first_host_free and $config{'vpn_net'}.$second_host_free");
	open CCDFILE, "> $ccd_file" or die "Error open log file $!";
		
	print CCDFILE "ifconfig-push $config{'vpn_net'}.$first_host_free $config{'vpn_net'}.$second_host_free\n";
	close(CCDFILE);


	console_log("OpenVPN restart");dp("OpenVPN restart");
	system("/etc/init.d/openvpn restart");

	
		
	}








#open VPNFRAMEWORK, "> $opframeworkconf" or die "Error open log file $!";
#print VPNFRAMEWORK <<EOF;
#$script_msg
#client
#dev tun
#proto tcp
#remote $config{'admin_ip'} 33800
#resolv-retry infinite
#nobind
#user nobody
#group users
#persist-key
#persist-tun
#comp-lzo
#verb 3

#ca /etc/openvpn/keys/ca.crt
#cert /etc/openvpn/keys/framework.crt
#key /etc/openvpn/keys/framework.key
#EOF

#open VPNSERVER, "> $opserverconf" or die "Error open log file $!";
#print VPNSERVER <<EOF;
#$script_msg
#client
#dev tun
#proto tcp
#remote $config{'admin_ip'} 33800
#resolv-retry infinite
#nobind
#user nobody
#group users
#persist-key
#persist-tun
#comp-lzo
#verb 3

#ca /etc/openvpn/keys/ca.crt
#cert /etc/openvpn/keys/framework.crt
#key /etc/openvpn/keys/framework.key
#EOF

#	}

}

###### first boot cd install function (dk version)

sub upgrade_ossim_ver(){

my @comment_update;


if ( ! -f $monit_file ){
	
	push(@comment_update,"File $monit_file not found");
	$UP_monit=1;
}

if ( ! -f $monitdefault_file ){
	
	push(@comment_update,"file $monitdefault_file not found");
	$UP_monit=1;
	
	
}

if ( ! -f "/usr/share/doc/ossim-mysql/contrib/create_mysql.sql.gz" ) { $UP_ossim_mysql=1;}
if ( ! -f "/usr/share/doc/ossim-mysql/contrib/ossim_config.sql.gz" ) { $UP_ossim_mysql=1; }
if ( ! -f "/usr/share/doc/ossim-mysql/contrib/ossim_data.sql.gz" ) { $UP_ossim_mysql=1;}

if ( ! -f "/usr/share/doc/ossim-mysql/contrib/create_snort_tbls_mysql.sql.gz" ) { $UP_ossim_mysql=1;}


if ( ! -f "/usr/share/ossim/include/upgrades/datawarehouse.sql" ) {$UP_ossim_mysql=1;}
if ( ! -f "/usr/share/doc/ossim-mysql/contrib/create_mysql.sql.gz" ) {$UP_ossim_mysql=1;}
if ( ! -f "/usr/share/ossim-installer/databases/plugin_reference.sql" ) {$UP_ossim_mysql=1;}
			

if ( ! -f $nagiosapache_file ) {
		push(@comment_update,"File $nagiosapache_file not found");
		$UP_nagios3=1;
		
}


if ( ! -f $defaultapache_file ){
		push(@comment_update,"File $defaultapache_file not found");
		$UP_apache2=1;
		
}

if ( ! -f $frameworkapache_file ){
	push(@comment_update,"File $frameworkapache_file not found");
		$UP_framework=1;	
}


if ( ! -f $framework_file ){
		push(@comment_update,"File $framework_file not found");
		$UP_framework=1;	
}

if ( ! -f $apachentop_file ){
		push(@comment_update,"File $apachentop_file not found");
		$UP_framework=1;
	
}


if ( ! -f $snort_cfg ){
		push(@comment_update,"File $snort_cfg not found");
		$UP_snort=1;
}

if ( ! -f $snort_debian_cfg ){
		push(@comment_update,"File $snort_debian_cfg not found");
		$UP_snort=1;
}

if ( ! -f $servercfg ){
		push(@comment_update,"File $servercfg not found");
		$UP_server=1;
}
	
if ( ! -f $agentcfg ){
		push(@comment_update,"File $agentcfg not found");
		$UP_agent=1;
}


if ($UP_snort == 1 ){ push(@comment_update,"Install package snort");}
if ($UP_server == 1 ){ push(@comment_update,"Install package ossim-server");}
if ($UP_agent == 1 ){ push(@comment_update,"Install package ossim-agent");}
if ($UP_framework == 1 ){ push(@comment_update,"Install package ossim-framework and ossim-framework-daemon");}
if ($UP_apache2 == 1 ){ push(@comment_update,"Install package apache2");}
if ($UP_nagios3 == 1 ){ push(@comment_update,"Install package nagios3");}
if ($UP_monit == 1 ){ push(@comment_update,"Install package monit");}
if ($UP_ossim_mysql == 1 ){ push(@comment_update,"Install package ossim-mysql");}


	
}


